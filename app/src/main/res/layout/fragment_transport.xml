<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    tools:context=".TransportFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewTransport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transport"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewParking"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="140dp"
            android:src="@drawable/parking"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewEnc"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/image_enc"
            android:layout_marginLeft="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewParking"
            app:layout_constraintStart_toEndOf="@+id/imageViewParking"
            app:layout_constraintTop_toTopOf="@+id/imageViewParking" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>